  cd(env, "test_dir");
  environ(env);

  return 0;
}


void cls(){
  for (int i = 0; i< 100; i++){
    puts("");
  }
}

  
void quit(){
  exit(0);
}

//not even sure if this works atm
void pause_a(){
  char ENTER = '\n';
  char input;
  
  while(1){
    scanf("%c", &input);
    if (input == ENTER){
      break;
    }
  }
}
  
void echo(char *input){
  printf("%s\n", input);
}

void environ(char ** env){

  int index = 0;
  
  while(env[index]!= NULL){
    printf("%s\n", env[index]);
    index++;
    
  }
    
}
  
